<% if comments.length > 0 %>
  <hr class="featurette-divider">
  <h1><%= t(:'comments.comments') %></h1>
  <ul class='media-list comments'>
    <% comments.each do |comment| %>
      <li class='media comment' id='comment_<%= comment.id %>'>
        <a class='pull-left' href='#'>
          <%= image_tag comment.user.avatar.url(:thumb), class: 'media-object' %>
        </a>
        <%# end %>
        <div class='media-body'>
          <h4 class='media-heading'><%= link_to comment.user.username, user_url(comment.user) %></h4>
          <p><%= comment.content %></p>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>
