<div style='width: 100%; height: 500px;' id='project-video'>
  <a id="bgndVideo"
    class="player"
    data-property="{
      videoURL:'http://youtu.be/<%= @project.youtube_video_id %>',
      containment: 'body',
      autoPlay:true,
      mute:true,
      loop: true,
      startAt:0,
      opacity:1,
      showControls: false,
      showYTLogo: false,
      quality: 'highres'}">
  </a>
</div>

<div style='position: fixed; left: 10px; top: 50px;' onclick="$('#bgndVideo').unmuteYTPVolume()">
  <i class="fa fa-volume-up fa-3x"></i>
</div>

<div style='position: fixed; left: 70px; top: 50px;' onclick="$('#bgndVideo').muteYTPVolume()">
  <i class="fa fa-volume-off fa-3x"></i>
</div>

<div style='position: fixed; left: 110px; top: 50px;' onclick="$('#bgndVideo').pauseYTP()">
  <i class="fa fa-pause fa-3x"></i>
</div>

<div style='position: fixed; left: 170px; top: 50px;' onclick="$('#bgndVideo').playYTP()">
  <i class="fa fa-play fa-3x"></i>
</div>

<div class='container' style='background-color: #2b3e50; padding: 30px;'>
  <ol class='breadcrumb'>
    <li><%= link_to t(:'common.home'), root_url %></li>
    <li><%= link_to t(:'projects.projects'), projects_url %></li>
    <li class='active'><%= @project.title %></li>
  </ol>

  <div class='page-header'>
    <h1><%= @project.title %></h1> 
    <% @project.tags.each do |tag| %>
      <span class='label label-primary'><%= tag.name %></span>
    <% end %>
  </div>

  <%= render partial: 'comments/comments', object: @project.comments %>
  <%= render partial: 'comments/new', locals: { parent: @project } %>
</div>

<script type='text/javascript'>
    $(document).ready(function() {
        $('.player').mb_YTPlayer();
    });
</script>
