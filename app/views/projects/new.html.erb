<div class='row'>
  <div class='col-xs-12 col-sm-6 col-md-8'>
    <h1><%= t(:'projects.new_project') %></h1>

    <%= form_for @project, html: { role: 'form' } do |f| %>
      <%= content_tag :div, class: 'form-group' do %>
    	  <%= f.label :title %>
    	  <%= f.text_field :title, class: 'form-control' %>
      <% end %>

      <%= content_tag :div, class: 'form-group' do %>
    	  <%= f.label :description %>
    	  <%= f.text_area :description, class: 'form-control' %>
      <% end %>

    	<%= content_tag :div, class: 'form-group' do %>  
        <%= f.label :video_url %>
    	  <%= f.text_field :video_url, class: 'form-control' %>
      <% end %>

      <%= content_tag :div, class: 'form-group' do %>
        <%= f.label :images_attributes %>
        <%= f.fields_for :images_attributes do |i| %>
          <%= i.file_field :avatar, style: 'display: none' %>
        <% end %>
        <div class='form-group'>
          <input id='upload-image' class='form-control' type='text'><br />
          <button class='btn btn-primary upload-image-button'>
            <%= t(:'images.upload') %>
          </button>
        </div>
      <% end %>

    	<%= f.submit t(:'common.create'), class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
