<%= content_tag :div, class: 'form-group' do %>
  <%= f.label :username, class: "required" %><br />
  <%= f.text_field :username, autofocus: true, class: 'form-control', required: true %>
<% end %>

<%= content_tag :div, class: 'form-group' do %>
  <%= f.label :first_name, class: "required" %><br />
  <%= f.text_field :first_name, class: 'form-control', required: true %>
<% end %>

<%= content_tag :div, class: 'form-group' do %>
  <%= f.label :last_name, class: "required" %><br />
  <%= f.text_field :last_name, class: 'form-control', required: true %>
<% end %>

<%= content_tag :div, class: 'form-group' do %>
  <%= f.label :email, class: "required" %><br />
  <%= f.email_field :email, class: 'form-control', required: true %>
<% end %>

<% if !edit %>
  <%= content_tag :div, class: 'form-group' do %>
    <%= f.label :password, class: "required" %><br />
    <%= f.password_field :password, autocomplete: 'off', class: 'form-control', required: true %>
  <% end %>

  <%= content_tag :div, class: 'form-group' do %>
    <%= f.label :password_confirmation, class: "required" %><br />
    <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', required: true %>
  <% end %>
<% end %>

<%= content_tag :div, class: 'form-group' do %>
  <%= f.label :member_type %><br />
  <%= f.select :member_type, options_for_select(%w{mentor innovator committee}, 'innovator'), class: 'member-type' %>
<% end %>

<%= content_tag :div, class: 'form-group' do %>
  <%= f.label :company, class: "required" %><br />
  <%= f.text_field :company, class: 'form-control', required: true %>
<% end %>

<%= content_tag :div, class: 'form-group' do %>
  <%= f.label :job_title, class: "required" %><br />
  <%= f.text_field :job_title, class: 'form-control', required: true %>
<% end %>

<%= content_tag :div, class: 'form-group' do %>
  <%= f.label :linkedin_url %><br />
  <%= f.text_field :linkedin_url, class: 'form-control' %>
<% end %>

<%= content_tag :div, class: 'form-group' do %>
  <%= f.label :biography, class: "required" %>
  <%= f.text_area :biography, class: 'form-control tinymce tinymce-text-area', required: true %>
<% end %>

<%= content_tag :div, class: 'form-group' do %>
  <%= f.label :industries %>
  <%= f.select :industries,
    User::INDUSTRIES.values,
    {},
    { multiple: true, id: 'user-industries' } %>
<% end %>

<%= content_tag :div, class: 'form-group' do %>
  <%= f.label :skill_list, t(:'users.skills') %>
  <%= f.select :skill_list,
    @skills,
    {},
    { multiple: true, id: 'user-skills' } %>
<% end %>

<%= content_tag :div, class: 'form-group' do %>
  <%= f.label :country_id, 'Country' %>
  <%= f.select :country_id,
    Country.all.collect {|c| [c.name, c.id] },
    {},
    { id: 'user-country' } %>
<% end %>

<%= content_tag :div, class: 'form-group' do %>
  <%= f.label :referred_by_id, 'Referrer' %>
  <%= f.select :referred_by_id,
    User.all.collect {|u| [u.name, u.id] },
    {},
    { id: 'user-referred-by' } %>
<% end %>

<%= content_tag :div, class: 'form-group' do %>
  <%= f.label :avatar, t(:'users.profile_picture'), class: "required" %>
  <%= f.file_field :avatar, required: true %>
<% end %>
